.columns
  .width_24
    -if !request.xhr? || @new_record == true
      .resource_panel
        - rounded_box_for( |
            nil, |
            :header => {:text => "Manage Site Configurations", :level => 4, :color => "green"}, |
            :footer => { :color => "chrome"}, |
            :group_name => "site_configurations" |
          ) do |rounded_box| |
          = render :partial => "site_configurations_list"
    -else
      = render :partial => "site_configurations_list"
- total_flag =  (@site_configurations.total_entries.to_i % (params[:per_page].blank? ? 10 : params[:per_page]).to_i)
= update_rounded_box_actions( |
    [ |
      link_to("Add", new_admin_site_configuration_path(current_user, :per_page => params[:per_page], :page => @site_configurations.total_pages + (total_flag > 0 ? 0 : 1) ), :class => "button") |
    ], |
    :group_name => 'site_configurations' |
  ) |

.columns
  .width_23
    -if !request.xhr? || @new_record == true
      .resource_panel
        - rounded_box_for( |
            nil, |
            :header => {:text => "Manage Static Pages", :level => 4, :color => "green"}, |
            :footer => { :color => "chrome"}, |
            :group_name => "static_pages" |
          ) do |rounded_box| |
          = render :partial => "static_pages_list"
    -else
      = render :partial => "static_pages_list"
- total_flag =  (@static_pages.total_entries.to_i % (params[:per_page].blank? ? 10 : params[:per_page]).to_i)
= update_rounded_box_actions( |
    [ |
      link_to("Add", new_admin_static_page_path(current_user, :per_page => params[:per_page], :page => @static_pages.total_pages + (total_flag > 0 ? 0 : 1) ), :class => "button") |
    ], |
    :group_name => 'static_pages' |
  ) |

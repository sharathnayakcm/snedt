.columns
  .width_24
    -if !request.xhr? || @new_record == true
      .resource_panel
        - rounded_box_for( |
            nil, |
            :header => {:text => "Manage Topics", :level => 4, :color => "green"}, |
            :footer => { :color => "chrome"}, |
            :group_name => "topics" |
          ) do |rounded_box| |
          = render :partial => "topics_list"
    -else
      = render :partial => "topics_list"
- total_flag =  (@topics.total_entries.to_i % (params[:per_page].blank? ? 10 : params[:per_page]).to_i)
= update_rounded_box_actions( |
    [ |
      link_to("Add", new_admin_topic_path(current_user, :per_page => params[:per_page], :page => @topics.total_pages + (total_flag > 0 ? 0 : 1) ), :class => "button") |
    ], |
    :group_name => 'topics' |
  ) |

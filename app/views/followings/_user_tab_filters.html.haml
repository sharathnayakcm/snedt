.new_item_bar_div
  .new_item_bar
    .filter_panel_actions
      .float_left.text.text_header.bold== Select:
      .float_left.text= link_to_remote_with_loader " #{t :all} ",:url => {:action => :followings_filter_custom_streams, :controller => "followings", :by => "all", :id => @custom_tab ? @custom_tab.id : nil}
      .float_left.text= link_to_remote_with_loader " #{t :read} ",:url => {:action => :followings_filter_custom_streams, :controller => "followings", :by => "read", :id => @custom_tab ? @custom_tab.id : nil}
      .float_left.text= link_to_remote_with_loader " #{t :unread} ",:url => {:action => :followings_filter_custom_streams, :controller => "followings", :by => "unread", :id => @custom_tab ? @custom_tab.id : nil}
      .float_left.fav_filter= link_to_remote_with_loader "#{image_tag('favourite_heart.png')}",:url => {:action => :followings_filter_custom_streams, :controller => "followings", :by => "favourites", :id => @custom_tab ? @custom_tab.id : nil}, :html => {:title => "#{t :favourites}"}
      .float_left
        %table
          %tr
            %td
              .service_image{:style => "padding-left: 5px;padding-top: 6px;"}
                = link_to_remote_with_loader '<img src="/images/services/edintity.gif" width="18px" height="18px" border="0" />'.html_safe,:url => {:action => :followings_filter_custom_streams, :controller => "followings", :by => "edintity", :id => @custom_tab ? @custom_tab.id : nil}
      .float_left.services_filter{:style => "padding-left: 5px;"}
        -unless @services.blank?
          - @services.each do |service|
            - unless service.name.downcase.include?("rss")
              - service_tag, service_count = service_filter(service)
              .float_left
                %table
                  %tr
                    %td
                      .align_right.services_count{:style => "color: white; width: 7px; margin-bottom:-9px; margin-left: 17px; font-weight: bold; text-align:center !important;"}
                  %tr
                    %td
                      .service_image
                        = link_to_remote_with_loader "#{service_tag}",:url => {:action => :followings_filter_custom_streams, :controller => "followings", :service_id => service.id, :id => @custom_tab ? @custom_tab.id : nil}
.clear
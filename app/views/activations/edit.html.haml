#mainContent
  - form_tag activation_path(1),:method =>:put do
    #ednt-ActivationRecovery.ednt-Wrapper
      .titles
        %h4=t :resend_activation_link
      #ActivationRecovery.MP-boxes
        .passRecoveryInfo
          %p=t :resend_activation_link_message
        #emailRecovery
          #inputEmailLink
            %label= t :email_downcase
            =text_field_tag("email", "", :size => 40, :id => "emailAddress")
          #recoveryAction.flRight
            .blueBtn
              =submit_tag "#{t :resend_activation_link}"
            .bronzeBtn
              = link_to(t(:cancel), root_path)

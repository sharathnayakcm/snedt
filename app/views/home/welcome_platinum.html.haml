#mainContent
  #ednt-Activation.ednt-Wrapper
    .titles
      %h4=t :done_header
    #activitionWrapper.MP-boxes.welcomePageWrapper.activationWrapperBusiness
      .activationInfo
        %span.infoIcon
        %p
          = t :welcome_message, :plan_name => current_user.membership.name
      .clear_both
      #welcome_page_business.blueBtn.clear_both
